@using Models.ViewModels
@model IEnumerable<Models.Models.PdfInfo>

@{
    ViewBag.Title = "title";
    Layout = $"_Layout";
}

<h2>Pdf Keywork Lookup</h2>

<table class="table">
    <thead>
    <tr>
        <th>Path</th>
        <th>Explicit keyworkds</th>
        <th>Implict keyworkds</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var pdfInfo in Model)
    {
        <tr>
            <td>@pdfInfo.Path</td>
            @foreach (var keyword in pdfInfo.ImplicitKeywords)
            {
                <td>
                    <span class="label label-primary">@keyword.Value</span>  
                </td>
            }
            
            @foreach (var keyword in pdfInfo.ExplicitKeywords)
            {
                <td>
                    @keyword
                    <span class="label label-primary">@keyword.Value</span>    
                </td>
            }
        </tr>
    }
    </tbody>
</table>

<hr />

<div class="row">
    <div class="col-sm-6">
        @Html.Partial("Partials/Parse", new PathInput())
    </div>

    <div class="col-sm-6">
        @Html.Partial("Partials/ParseRange", new PathInput())
    </div>
</div>